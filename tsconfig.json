{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["es2016", "dom"],
    "typeRoots": [
      "src/types/*"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "**/*.spec.ts"],
  "paths": {
      "*": [
          "src/types/*"
      ],
      "@capacitor/cli/dist/config": ["src/types/capacitor-cli.d.ts"]
  }
}
